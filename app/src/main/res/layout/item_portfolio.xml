<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layoutDirection="ltr">

        <TextView
            android:id="@+id/stockSymbolText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAPL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/stockBuyPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Price: 0"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/stockCurrentPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Price: 0"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/stockPercentChangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change: 0%"
            android:layout_marginTop="4dp"
            android:textAlignment="viewStart"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnDeleteStock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/ic_delete"
        app:tint="#2196F3"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Delete Stock"
        android:layout_gravity="center"/>
</LinearLayout>
