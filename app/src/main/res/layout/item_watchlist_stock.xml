<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="2dp"
    app:strokeColor="#2196F3"
    app:cardCornerRadius="16dp"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layoutDirection="ltr">

        <!-- ערכי הנכס -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layoutDirection="ltr">

            <TextView
                android:id="@+id/stockSymbolText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAPL"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="7dp"
                android:textAlignment="viewStart"/>

            <TextView
                android:id="@+id/stockPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Price: 0"
                android:textSize="15sp"
                android:textColor="#222"
                android:textAlignment="viewStart"/>

            <TextView
                android:id="@+id/stockDayChangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Change: 0.00%"
                android:textSize="15sp"
                android:textColor="#1A237E"
                android:textAlignment="viewStart"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

        <!-- כפתור מחיקה -->
        <ImageButton
            android:id="@+id/btnDeleteStock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_delete"
            app:tint="#2196F3"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Delete from Watchlist"
            android:layout_gravity="center"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
